					.similar__el-content
						.product-number.product-number--small
							+icon('ico-number')
							span 81
						h3.similar-heading Бразилия
						h3.heading-l3 Сантос 19
						.bitter
							span Кислотность
							ul
								li.bitter__el.bitter__el--active
								li.bitter__el.bitter__el--active
								li.bitter__el
